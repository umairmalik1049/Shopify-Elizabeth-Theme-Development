<div class="flex flex-col items-center my-8">
  <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>

  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
        {% render 'product-card'
          , product_product: product %}

      {% else %}
        {% for item in (1..3) %}
          {% render 'product-card-placeholder'
            , item_item: item %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Featured Collection",
        "label": "Title"
      }, {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      }, {
        "type": "checkbox",
        "id": "show_vendor_of_product",
        "default": true,
        "label": "Show vendor of product"
      }, {
        "type": "range",
        "id": "number_of_products_to_show",
        "min": 3,
        "max": 9,
        "default": 6,
        "label": "Number of products to show"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}