<div class="w-full py-6 px-3">
  <div class="border border-gray-300 bg-white shadow-lg rounded-lg overflow-hidden">

    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            src="{{ product_product.featured_image | image_url: width: 300, height: 300 }}"
            alt="{{ product_product.featured_image.alt }}"
            width="300"
            height="300"
            class="w-full h-full object-cover bg-gray-100 transition duration-500 ease-in-out hover:scale-104 transform">
        </div>

      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">

      {% if section.settings.show_vendor_of_product %}
        <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>
      {% endif %}

      <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title }}</a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>